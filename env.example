# Music Police - Environment Configuration
# Copy this file to .env and update the values as needed

# Environment
ENV=dev
DEBUG=true

# Database Configuration
DATABASE_URL=postgresql://musicpolice_user:musicpolice_password@localhost:5432/musicpolice_db

# Security
SECRET_KEY=your-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# File Upload Settings
MAX_FILE_SIZE=52428800  # 50MB in bytes
UPLOAD_DIR=uploads

# ML Model Settings
SIMILARITY_THRESHOLD=0.7
BIAS_DETECTION_ENABLED=true
COPYRIGHT_CHECK_ENABLED=true

# Server Settings
HOST=127.0.0.1
PORT=8000

# API Settings
API_RATE_LIMIT=100  # requests per minute
API_LOGGING=true

# Email Settings (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=your-email@gmail.com

# Redis Settings (for background tasks)
REDIS_URL=redis://localhost:6379/0

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/musicpolice.log
