# Music Police - Environment Configuration Example
# Copy this file to .env and update the values according to your setup

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Database URL
# Format: postgresql://username:password@host:port/database_name
DATABASE_URL=postgresql://postgres:password@localhost:5432/musicpolice_db

# Alternative database configuration (if not using DATABASE_URL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=musicpolice_db
DB_USER=postgres
DB_PASSWORD=password

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Application Environment
# Options: development, production, testing
ENVIRONMENT=development

# Application Host and Port
HOST=0.0.0.0
PORT=8000

# Application Secret Key (generate a secure random string for production)
SECRET_KEY=your-secret-key-here-change-this-in-production

# Debug Mode (set to False in production)
DEBUG=True

# =============================================================================
# FILE UPLOAD SETTINGS
# =============================================================================

# Maximum file size in MB
MAX_FILE_SIZE_MB=100

# Allowed audio file extensions
ALLOWED_EXTENSIONS=mp3,wav,flac,m4a,ogg

# Upload directory path
UPLOAD_DIR=uploads

# =============================================================================
# AI/ML SERVICE CONFIGURATION
# =============================================================================

# OpenAI API Key (for Whisper transcription)
OPENAI_API_KEY=your-openai-api-key-here

# Hugging Face API Token (for bias detection models)
HUGGINGFACE_API_TOKEN=your-huggingface-token-here

# Model Configuration
WHISPER_MODEL=base
BIAS_MODEL=unitary/toxic-bert

# =============================================================================
# ANALYSIS SETTINGS
# =============================================================================

# Analysis timeout in seconds
ANALYSIS_TIMEOUT_SECONDS=300

# Similarity threshold for copyright detection (0.0 to 1.0)
SIMILARITY_THRESHOLD=0.7

# Bias detection threshold (0.0 to 1.0)
BIAS_THRESHOLD=0.4

# Content filtering threshold (0.0 to 1.0)
CONTENT_THRESHOLD=0.6

# =============================================================================
# BACKGROUND WORKER SETTINGS
# =============================================================================

# Redis URL for background task queue (optional)
REDIS_URL=redis://localhost:6379/0

# Celery broker URL (if using Celery)
CELERY_BROKER_URL=redis://localhost:6379/0

# Celery result backend
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path (optional)
LOG_FILE=logs/musicpolice.log

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# CORS origins (comma-separated list)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# API rate limiting
RATE_LIMIT_PER_MINUTE=100

# JWT settings (if implementing authentication)
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# MONITORING AND ANALYTICS
# =============================================================================

# Sentry DSN for error tracking (optional)
SENTRY_DSN=

# Google Analytics ID (optional)
GOOGLE_ANALYTICS_ID=

# =============================================================================
# EMAIL CONFIGURATION (for notifications)
# =============================================================================

# SMTP settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=True

# Email addresses
ADMIN_EMAIL=admin@musicpolice.com
SUPPORT_EMAIL=support@musicpolice.com

# =============================================================================
# CLOUD STORAGE (optional)
# =============================================================================

# AWS S3 configuration (if using cloud storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_BUCKET_NAME=musicpolice-uploads
AWS_REGION=us-east-1

# Google Cloud Storage (alternative to S3)
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_CLOUD_BUCKET_NAME=musicpolice-uploads

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Auto-reload on code changes (development only)
AUTO_RELOAD=True

# Enable API documentation
ENABLE_DOCS=True

# Enable CORS for development
ENABLE_CORS=True

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================

# SSL/TLS settings
SSL_CERT_PATH=
SSL_KEY_PATH=

# Static files serving
STATIC_FILES_PATH=static
MEDIA_FILES_PATH=uploads

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable specific features
ENABLE_BIAS_DETECTION=True
ENABLE_SIMILARITY_DETECTION=True
ENABLE_AUDIO_TRANSCRIPTION=True
ENABLE_BACKGROUND_PROCESSING=True
ENABLE_API_MONITORING=True

# =============================================================================
# CUSTOM SETTINGS
# =============================================================================

# Add any custom environment variables here
# CUSTOM_SETTING_1=value1
# CUSTOM_SETTING_2=value2

# =============================================================================
# NOTES
# =============================================================================

# 1. Never commit the actual .env file to version control
# 2. Generate secure random strings for SECRET_KEY and JWT_SECRET_KEY
# 3. Use environment-specific values for different deployments
# 4. Keep API keys and sensitive data secure
# 5. Update database credentials according to your PostgreSQL setup
# 6. Configure file paths according to your system structure