# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text eol=lf
*.pyc binary
*.pyo binary
*.pyd binary

# JavaScript files
*.js text eol=lf
*.json text eol=lf

# CSS files
*.css text eol=lf

# HTML files
*.html text eol=lf

# Markdown files
*.md text eol=lf

# Configuration files
*.ini text eol=lf
*.cfg text eol=lf
*.conf text eol=lf

# SQL files
*.sql text eol=lf

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf

# Batch files
*.bat text eol=crlf
*.cmd text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary

# Archive files
*.zip binary
*.tar binary
*.gz binary
*.rar binary
*.7z binary

# Audio files (should not be committed but just in case)
*.mp3 binary
*.wav binary
*.flac binary
*.m4a binary
*.ogg binary

# Database files
*.db binary
*.sqlite binary
*.sqlite3 binary

# Log files
*.log text eol=lf

# Environment files
.env text eol=lf
.env.* text eol=lf
